#include <stdlib.h>
#include <stdio.h>
#include "game.h"
#include "ui.h"
#include "board.h"

int main() {
    Game *game = create_game();
    Board *board = create_interactive_board();
    if (board == NULL) {
        printf("Invalid board parameters. Exiting...\n");
        free(game);
        exit(EXIT_FAILURE);
    }

    game->board = board;
    read_player_name(game);
    play_game(game);
    free(game);
    exit(EXIT_SUCCESS);
}
